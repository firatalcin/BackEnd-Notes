@model List<UserListModel>

@{
    ViewData["Title"] = "Home Page";
}

<table class="mt-4 table table-hover table-bordered table-sm">
   <thead>
        <tr>
            <th>Name</th>
            <th>Surname</th>
            <th>Account Count</th>
            <th></th>
        </tr>
   </thead> 
   <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Surname</td>
                <td><getAccountCount application-user-id="@item.Id"></getAccountCount></td>
                <td>
                    <a asp-action="Create" asp-controller="Account" asp-route-id="@item.Id">Create New Account</a>
                    <a asp-action="GetByUserId" asp-controller="Account" asp-route-id="@item.Id">Get Account</a>
                </td>
            </tr>
        }
   </tbody>
</table>


