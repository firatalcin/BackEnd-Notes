@model DirectoryInfo[]
@{
    ViewData["Title"] = "List";
}

<a asp-action="Create">Create</a>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Oluşturulma Zamanı</th>
            <th>Path</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
       @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.CreationTime</td>
                <td>@item.FullName</td>
                <td><a asp-action="Remove" asp-route-folderName="@item.Name">Remove</a></td>
            </tr>
        }
    </tbody>
</table>

